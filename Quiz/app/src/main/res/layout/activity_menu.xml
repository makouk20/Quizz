<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    tools:context="tn.iit.quiz.quiz.MenuActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/btn_cat1"

                android:text="@string/cat_1"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@layout/button_categorie"
                android:shadowColor="#7B8A89"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:alpha="0.8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/btn_cat2"
                android:text="@string/cat_2"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@layout/button_categorie"
                android:shadowColor="#7B8A89"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_below="@+id/btnFerme"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:alpha="0.8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/textView3" />

            <Button
                android:id="@+id/btn_cat3"
                android:text="@string/cat_3"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@layout/button_categorie"
                android:shadowColor="#7B8A89"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_below="@+id/btnOiseaux"
                android:layout_alignLeft="@+id/btnInsec"
                android:layout_alignStart="@+id/btnInsec"
                android:layout_alignRight="@+id/btnOiseaux"
                android:layout_alignEnd="@+id/btnOiseaux"
                android:alpha="0.8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/textView5" />

            <Button
                android:id="@+id/btn_cat4"
                android:text="@string/cat_4"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@layout/button_categorie"
                android:shadowColor="#7B8A89"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_below="@+id/btnInsec"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/btnInsec"
                android:layout_alignEnd="@+id/btnInsec"
                android:alpha="0.8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/textView6" />

            <Button
                android:id="@+id/btn_cat5"
                android:text="@string/cat_5"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@layout/button_categorie"
                android:shadowColor="#7B8A89"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_below="@+id/btnAniSau"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:alpha="0.8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/textView7" />

            <Button
                android:id="@+id/btn_cat6"
                android:text="@string/cat_6"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@layout/button_categorie"
                android:shadowColor="#7B8A89"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_below="@+id/btn_cat5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:alpha="0.8"/>
        </LinearLayout>
    </RelativeLayout>
